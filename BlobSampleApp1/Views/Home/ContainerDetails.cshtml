@model BlobSampleApp1.Models.ContainerCreateViewModel
@{
    ViewData["Title"] = "Form";
}

<form asp-controller="Home" asp-action="UpdateContainer" method="post" class="form-horizontal" id="customerForm" role="form">
    <div class="row list-mb-7 pt-2">
        <div class="col-12 mb-2">
            <div class="card no-padding bolt-card flex-column depth-8 bolt-card-white customer-item m-2">
                <div class="card-content">
                    <div class="card-body">
                        <h4 class="pb-2">Create Container</h4>
                        <div class="form-group row">
                            <label asp-for="Name" class="col-sm-2 col-form-label">Container Name</label>
                            <div class="col-sm-8">
                                <input asp-for="Name" type="text" class="form-control form-control-user" id="wikiLink">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 mr-4">
                        <div class="form-group text-right mr-3">
                            <button type="submit" class="btn create-button create-left-margin">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

