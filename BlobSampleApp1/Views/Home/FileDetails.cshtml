@model BlobSampleApp1.Models.UploadFileViewModel
@{
    ViewData["Title"] = "Form";
}

<form asp-controller="Home" asp-action="UploadFile" method="post" class="form-horizontal" id="customerForm" role="form" enctype="multipart/form-data">
    <div class="row list-mb-7 pt-2">
        <div class="col-12 mb-2">
            <div class="card no-padding bolt-card flex-column depth-8 bolt-card-white customer-item m-2">
                <div class="card-content">
                    <div class="card-body">
                        <h4 class="pb-2">Upload File</h4>

                        <div class="form-group row">
                            <label asp-for="SelectedContainer" class="col-sm-2 col-form-label">Container</label>
                            <div class="col-sm-8">
                                <select asp-for="SelectedContainer" asp-items="Model.ContainerSelectList" class="form-control form-control-user" id="selectedContainer">
                                </select>
                                <span asp-validation-for="SelectedContainer" class="text-danger"></span>
                            </div>
                        </div>

                        @*<div class="form-group row">
                            <label asp-for="FilePath" class="col-sm-2 col-form-label">File Path</label>
                            <div class="col-sm-8">
                                <input asp-for="FilePath" type="text" class="form-control form-control-user" id="filePath">
                                <span asp-validation-for="FilePath" class="text-danger"></span>
                            </div>
                        </div>*@

                        <div class="form-group row">
                            <label asp-for="InputFile" class="col-sm-2 col-form-label">Input File</label>
                            <div class="col-sm-8">
                                <input asp-for="InputFile" type="file" id="inputFile" runat="server" Name="InputFile">
                                <span asp-validation-for="InputFile" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 mr-4">
                        <div class="form-group text-right mr-3">
                            <button type="submit" class="btn create-button create-left-margin">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>